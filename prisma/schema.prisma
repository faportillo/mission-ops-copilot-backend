generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// New model to register spacecraft
model Spacecraft {
  id          String   @id @default(cuid())
  name        String
  missionType String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  spacecraftConfig SpacecraftConfig?
}

// Per-spacecraft configuration stored as JSONB
model SpacecraftConfig {
  id           String    @id @default(cuid())
  spacecraftId String    @unique
  config       Json
  status       String    @default("approved")
  source       String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  spacecraft   Spacecraft @relation(fields: [spacecraftId], references: [id])
}

model TelemetrySnapshot {
  id            String   @id
  spacecraftId  String
  timestamp     DateTime
  parameters    Json

  @@index([spacecraftId, timestamp])
}

model MissionEvent {
  id            String   @id
  spacecraftId  String
  timestamp     DateTime
  type          String
  severity      String
  message       String
  metadata      Json?

  @@index([spacecraftId, timestamp])
}

model OpsDocument {
  id       String   @id
  title    String
  content  String
  tags     String[]
}


